{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main/python/main.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "${workspaceFolder}/.venv/Scripts"
            }
        },
        {
            "name": "Python: Profile",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main/python/main.py",
            "args": ["--profile"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "${workspaceFolder}/.venv/Scripts",
                "PYTHONPATH": "${workspaceFolder}/src/main/python"
            }
        }
    ]
}
