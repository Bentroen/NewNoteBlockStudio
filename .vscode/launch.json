{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main/python/main.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/main/python"
            }
        },
        {
            "name": "Python: Profile",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/main/python/main.py",
            "args": ["--profile"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/main/python"
            }
        },
        {
            "name": "Python: Coverage",
            "type": "node-terminal",
            "request": "launch",
            "preLaunchTask": "Generate coverage report",
            "postDebugTask": "Open coverage report"
        }
    ]
}
